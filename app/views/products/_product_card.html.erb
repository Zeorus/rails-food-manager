<% @products_by_category.each do |product| %>
  <% if product.category_id == @last %>
    <div class="card_product">
      <div class="text-right p-2">
        <a href="#" class="dropdown-toggle nav-item dropdown" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-edit icon"></i></a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a href="#productEditModal<%= product.id %>" data-toggle="modal" data-target="#productEditModal<%= product.id %>" class="dropdown-item dropdown-item-top" data-edit=" <%= @product = product %>">edit</a>
          <%= link_to "destroy", product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item dropdown-item-top" %>
        </div>
      </div>
      <div class= "text-center">
        <button type="button" class="" data-toggle="modal" data-target="#productShowModal" data-category=" <%= product %> ">
          <% if product.photo.attached?%>
            <%= cl_image_tag product.photo.key, class: "image_product text-center" %>
          <% else %>
            <%= image_tag "default_image.jpg",class: "image_product text-center" %>
          <% end %>
        </button>
     </div>
      <div class="product_info">
        <h6 class="name"><%= product.name %></h6>
        <h6 class="price"><strong><%= product.price %> €</strong></h6>
      </div>
    </div>
    <%= render 'modalEdit' %>
    <%= render 'show_modal' %>
  <% else  %>
    <%= product.category.name  %>
    <div class="card_product">
      <div class="text-right p-2">
        <a href="#" class="dropdown-toggle nav-item dropdown" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-edit icon"></i></a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a href="#productEditModal<%= product.id %>" data-toggle="modal" data-target="#productEditModal<%= product.id %>" class="dropdown-item dropdown-item-top" data-edit=" <%= @product = product %>">edit</a>
          <%= link_to "destroy", product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item dropdown-item-top" %>
        </div>
      </div>
      <div class= "text-center">
        <button type="button" class="" data-toggle="modal" data-target="#productShowModal" data-category=" <%= product %> ">
          <% if product.photo.attached?%>
            <%= cl_image_tag product.photo.key, class: "image_product text-center" %>
          <% else %>
            <%= image_tag "default_image.jpg",class: "image_product text-center" %>
          <% end %>
        </button>
      </div>
      <div class="product_info">
        <h6 class="name"><%= product.name %></h6>
        <h6 class="price"><strong><%= product.price %> €</strong></h6>
      </div>
    </div>
    <%= render 'modalEdit' %>
    <%= render 'show_modal' %>
  <% end %>
  <% @last = product.category_id %>
<% end %>


