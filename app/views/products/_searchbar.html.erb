<div id="products-searchbar">
  <%= form_tag products_path, method: :get do %>
    <div class="laptop-searchbar">
      <%= text_field_tag :query,
      params[:query],
      class: "input-form",
      placeholder: "Find an order"
      %>
      <button type="submit">
        <i class="fas fa-search"></i>
      </button>
    </div>
  <% end %>
</div>

