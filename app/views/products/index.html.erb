<%= render "searchbar" %>
<div class="cards_product">
  <% if @products.empty?%>
    <%= render "product_card", products: @products_all %>
  <% else %>
    <%= render "product_card", products: @products %>
   <% end %>
</div>
<div class="text-right pt-2">
  <div class="btn-content">
    <button type="button" class="btn-large nav-link btn-product" data-toggle="modal" data-target="#productModal" data-product=" <%= @product = Product.new %> ">
      New Product
    </button>
    <button type="button" class="btn-large nav-link btn-product" data-toggle="modal" data-target="#categoryModal" data-category=" <%= @category = Category.new %> ">
      New Category
    </button>
  </div>
  <div class="btn-content">
  <%= render 'modal_products' %>
  <%= render 'categories/modal' %>
</div>
