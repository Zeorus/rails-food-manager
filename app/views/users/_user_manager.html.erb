<div class="category">
  <h2 class="text-center">Managers</h2>
  <% @managers.each do |manager| %>
    <div class="show-user" data-toggle="modal" data-target="#userShowModal<%= manager.id %>" data-category=" <%= manager %> ">
      <% if manager.avatar.attached? %>
        <%= cl_image_tag manager.avatar.key, class: "avatar-staff", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else %>
        <%= image_tag "manager.jpeg",class: "avatar-staff" %>
      <% end %>
      <div class="name">
        <%= manager.first_name %>
        <%= manager.last_name %>
      </div>
    </div>
    <div class="modal fade" id="userShowModal<%= manager.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5>Staff member</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h2 class="text-center"><%= manager.first_name %> <%= manager.last_name %></h2>
            <h4 class="text-center role-member"><%= manager.role%></h4>
            <% if manager.avatar.attached? %>
              <%= cl_image_tag manager.avatar.key, class: "avatar-staff-show"%>
            <% else %>
              <%= image_tag "manager.jpeg",class: "avatar-staff-show" %>
            <% end %>
            <div class="staff-info">
              <h5 class="text-center" >contact :</h5 >
              <span class="info-member"><%= manager.email%> / <%= manager.phone_number%></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
