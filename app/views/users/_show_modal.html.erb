<div class="modal fade" id="userShowModal<%= user.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Staff member</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2 class="text-center"><%= user.first_name %> <%= user.last_name %></h2>
        <h4 class="text-center role-member"><%= user.role%></h4>
        <% if user.avatar.attached? %>
          <%= cl_image_tag user.avatar.key, class: "avatar-staff-show"%>
        <% else %>
          <%= @img %>
        <% end %>
        <div class="staff-info">
          <h5 class="text-center" >contact :</h5 >
          <span class="info-member"><%= user.email%> / <%= user.phone_number%></span>
        </div>
      </div>
    </div>
  </div>
</div>
