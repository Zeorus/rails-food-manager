<div id="address-list-container">
  <% if @groups != [] %>
    <div id="address-container">
      <% @groups.each_with_index do |group, index| %>
        <div class="order-group" id="order-group-<%= index + 1 %>" data-groupid="<%= index + 1 %>" data-ordersid="">
          <div class="header-order-group">
            <div class="d-flex"><h5>Delivery Group - <%= index + 1 %></h5> <div id="group-color-<%= index + 1 %>"></div></div>
            <div class="rider-select">
              <select class="select2 rider-select">
                <% @riders.each do |rider| %>
                  <option><%= rider.id %>. <%= rider.first_name %> <%= rider.last_name %></option>
                <% end %>
              </select>
              <div class="btn-large text-center btn-rider" data-btnid="<%= index + 1 %>">Attribute</div>
            </div>
          </div>
          
          <div class="order-list">
            <% group.each do |order| %>
              <div class="list-order-item" data-customerid="<%= order.customer_id %>"data-groupid="<%= index + 1 %>" data-orderid="<%= order.id %>">Address: <%= order.customer.full_address %></div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div id="orders-map-container">
      <div id="map"
          style="width: 100%; height: 100%;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  <% else %>
    No orders ready to ship
  <% end %>
</div>
