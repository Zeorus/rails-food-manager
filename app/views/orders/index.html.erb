<div id="orders-list-container">
  <div id="orders-searchbar">
    <%= form_tag orders_path, method: :get do %>
      <div class="laptop-searchbar">
        <%= text_field_tag :query,
        params[:query],
        class: "input-form",
        placeholder: "Find an order"
        %>
        <button type="submit">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <div id="orders-list">
    <div id="orders-header">
      <span class="tabs-item-time">Time</span>
      <span class="tabs-item-customer">Customer</span>
      <span class="tabs-item-price">Price</span>
      <span class="tabs-item-address">Address</span>
      <span class="tabs-item-city">City</span>
      <span class="tabs-item-status">Status</span>
    </div>
    <div id="orders-content">
      <% if @orders != [] %>
        <div class="order-row">
          <span class="tabs-item-time">22 min</span>
          <span class="tabs-item-customer">Moi</span>
          <span class="tabs-item-price">25 â‚¬</span>
          <span class="tabs-item-address">142 rue de Denain</span>
          <span class="tabs-item-city">Roubaix</span>
          <span class="tabs-item-status">Pending</span>
        </div>
      <% else %>
        <p>No order for today</p>
      <% end %>
    </div>
  </div>

  <div class="d-flex">
    <div class="flex-grow-1"></div>
    <%= link_to "Regroup by locations", "#", class: "btn-large", id: "btn-regroup-loc" %>
  </div>
</div>
