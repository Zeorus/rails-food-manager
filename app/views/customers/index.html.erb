<div class="container">
  <div class="container container-customer">
    <div class="row row-header">
      <div class="col-2">Name</div>
      <div class="col-2">Phone Number</div>
      <div class="col-2">Address</div>
      <div class="col-2">City</div>
      <div class="col-2">Action</div>
    </div>
    <!-- <div class="row">Email</div> -->
    <% @customers.each do |customer| %>
      <div class="row row-customer">
        <div class="col-2"><%= customer.first_name%> <%= customer.last_name%></div>
        <div class="col-2"><%= customer.phone_number%></div>
        <div class="col-2"><%= customer.address %></div>
        <div class="col-2"><%= customer.city%></div>
        <div class="col-2">
          <i class="fas fa-user-edit dropdown-toggle nav-item dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "edit", edit_customer_path(customer), class: "dropdown-item dropdown-item-top" %>
            <%= link_to "destroy", customer_path(customer), method: :delete, class: "dropdown-item dropdown-item-bottom" %>
          </div>
        </li>
        </div>

        <!-- <div class="col-6"><%= customer.email%></div>   -->
      </div>
    <% end %>
  </div>

</div>

