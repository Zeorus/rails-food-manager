<div id="form-container" class="container">
  <%= simple_form_for(customer) do |f| %>
    <div id="info">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :phone_number%>
      <%= f.input :address %>
      <%= f.input :zip_code %>
      <%= f.input :city %>
      <%= f.input :email %>
      <%= f.submit "Submit", class: "button" %>
    </div>
  <% end %>
</div>
